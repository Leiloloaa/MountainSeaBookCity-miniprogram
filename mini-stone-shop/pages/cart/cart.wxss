/* pages/cart.wxss */

.i-input-number view {
    display: inline-block;
    line-height: 20px;
    padding: 5px 0;
    text-align: center;
    min-width: 40px;
    box-sizing: border-box;
    vertical-align: middle;
    font-size: 12px;
    border: 1rpx solid #dddee1;
    border-radius: 50% !important;
}

.cu-bar {
    width: 100vw;
    position: fixed;
    bottom: 0;
    left: 0;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #eee;
}

.cu-bar.tabbar .submit:last-child {
    flex: .7;
}

.cu-bar.tabbar.shop .action {
    width: 160rpx;
    flex: initial;
}

.cu-bar.tabbar .action {
    font-size: 25rpx;
    position: relative;
    flex: 1;
    text-align: center;
    padding: 0;
    display: block;
    height: auto;
    line-height: 1;
    margin: 0;
    overflow: initial;
}

.radio-index--i-radio-title {
    display: inline-block;
    vertical-align: middle;
    padding-top: 8rpx;
    margin-left: 4px;
}

.middle {
    font-size: 22px;
    color: rgb(225, 101, 136);
}

.goodsCard {
    width: 100%;
    height: 220rpx;
    display: flex;
}

.goodsImg {
    width: 30%;
    height: 150rpx;
}

.content {
    margin-left: 10rpx;
    width: 40%;
}

.title {
    font-size: 30rpx;
}

.price {
    color: #f40;
    margin: 10rpx 0;
}

.btn {
    flex: 1;
}

.goodsImg image {
    display: inline-block;
    width: 220rpx;
    height: 120rpx;
}

.number-index--i-input-number-minus {
    display: inline-block;
    line-height: 20px !important;
    padding: 5px 0;
    text-align: center;
    min-width: 20px !important;
    box-sizing: border-box;
    vertical-align: middle;
    font-size: 12px;
    border: 1rpx solid #dddee1;
    border-radius: 50% !important;
}

.number-index--i-input-number-plus {
    display: inline-block;
    line-height: 20px !important;
    padding: 5px 0;
    text-align: center;
    min-width: 20px !important;
    box-sizing: border-box;
    vertical-align: middle;
    font-size: 12px;
    border: 1rpx solid #dddee1;
    border-radius: 50% !important;
}

.number-index--i-input-number-text {
    display: inline-block;
    line-height: 20px !important;
    padding: 5px 0;
    text-align: center;
    width: 20px !important;
    box-sizing: border-box;
    vertical-align: middle;
    font-size: 12px;
    border: 0rpx solid #dddee1 !important;
}